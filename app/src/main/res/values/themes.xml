    <style name="Theme.DisneyTripPlanner" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color.-->
        <item name="colorPrimary">@color/purple_primary</item>
        <item name="colorPrimaryDark">@color/blue_600</item>
        <item name="colorAccent">@color/blue_primary</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
