<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WaitTimesFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewWaitTimes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonBackToParkOptions" />

    <TextView
        android:id="@+id/textViewBackToParkOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/parks"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/buttonBackToParkOptions"
        app:layout_constraintStart_toEndOf="@+id/buttonBackToParkOptions"
        app:layout_constraintTop_toTopOf="@+id/buttonBackToParkOptions" />

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/buttonBackToParkOptions"
        android:layout_width="28dp"
        android:layout_height="18dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>